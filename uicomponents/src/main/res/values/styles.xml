<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme">
    </style>

    <!-- region Text styles -->
    <style name="AppTheme.Text.Title" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">@dimen/dimen_padding_small</item>
        <item name="android:letterSpacing">0.075</item>
    </style>

    <style name="AppTheme.Text.Subtitle1" parent="AppTheme">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">@dimen/dimen_padding_small</item>
        <item name="android:letterSpacing">0.075</item>
    </style>

    <style name="AppTheme.Text.Subtitle2" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/dimen_padding_small</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="AppTheme.Text.Body1" parent="AppTheme">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.07</item>
    </style>
    <style name="AppTheme.Text.CashStyle" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ff2600</item>
    </style>
    <!--endregion-->

    <style name="DefaultButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="WhiteButton" parent="DefaultButton">
        <item name="android:background">@drawable/white_button_ripple</item>
        <item name="android:textColor">@color/liverpool</item>
        <item name="android:drawableRight">@drawable/flecha_adelante_rosa</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">27dp</item>
    </style>

    <style name="PinkButton" parent="DefaultButton">
        <item name="android:background">@drawable/ripple_pink</item>
    </style>

    <style name="DarkGrayButton" parent="DefaultButton">
        <item name="android:background">@drawable/dark_gray_ripple</item>
    </style>

</resources>