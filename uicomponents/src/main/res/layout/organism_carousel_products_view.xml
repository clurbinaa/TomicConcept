<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.active24.uicomponents.atom.AtomicTextView
                android:id="@+id/widget_carousel_home_titulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:maxLines="2"
                app:atom_style="title"
                tools:text="asdasdas" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/carousel_recycled_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/min_vertical_margin"
            android:paddingBottom="@dimen/min_vertical_margin" />

    </LinearLayout>

</LinearLayout>